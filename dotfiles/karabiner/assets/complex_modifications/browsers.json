{
  "title": "Browsers",
  "rules": [
    {
      "description": "Select browser address bar with Cmd+D",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$",
                "^org\\.mozilla\\.firefoxdeveloperedition$",
                "^com\\.brave\\.Browser$",
                "^org\\.chromium\\.Chromium$",
                "^com\\.google\\.Chrome$",
                "^org\\.torproject\\.torbrowser$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Open browser developer tools with Ctrl+`",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$",
                "^org\\.mozilla\\.firefoxdeveloperedition$",
                "^com\\.brave\\.Browser$",
                "^org\\.chromium\\.Chromium$",
                "^com\\.google\\.Chrome$",
                "^org\\.torproject\\.torbrowser$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "i",
              "modifiers": [
                "left_command",
                "option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Open private window with Cmd+Shift+P (Chromium)",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.brave\\.Browser$",
                "^org\\.chromium\\.Chromium$",
                "^com\\.google\\.Chrome$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "command",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "n",
              "modifiers": [
                "left_command",
                "left_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}
